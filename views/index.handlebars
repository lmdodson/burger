{{!-- Jumbotron header --}}
<div class="jumbotron jumbotron-fluid">
	<div class="container">
		<h1 class="display-4">Eat Da Burger!</h1>
		<hr class="my-4">
		<p class="lead">Choose a burger from our menu or request a custom burger</p>
	</div>
</div>

<div class="row">
	<div class="burgers ready-burgers">
		<ul class="list-group avail">
			<li class="list-group-item li-head">Burgers Ready to Devour</li>
			{{#each burgers}}
			{{#unless devoured}}
			{{> burgers/burger devoured=1}}
			{{/unless}}
			{{/each}}
		</ul>
	</div>

	<div class="burgers burger-request">

		<h4>Add a Burger</h4>
		<form class="create-form">

			<div class="form-group">
				<label for="ca">Burger Name:</label>
				<input type="text" id="burgName" name="name" placeholder="Burger Special">
			</div>

			<div class="form-group">
				<input type="radio" name="devoured" value="0" checked="checked"> Ready to Eat
				<input type="radio" name="devoured" value="1"> Devoured
			</div>

			<button type="submit" class="submit">Add Burger</button>
		</form>
	</div>


	<div class="burgers devoured-burgers">
		<ul class="list-group devoured">
			<li class="list-group-item li-head">Devoured Burgers</li>
			{{#each burgers}}
			{{#if devoured}}
			{{> burgers/burger devoured=0}}
			{{/if}}
			{{/each}}
		</ul>
	</div>
</div>